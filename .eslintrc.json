{
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": ["error"],
      "no-unused-vars": ["error"],
      "no-var": "error",
      "consistent-return": "error",
      "no-eval": "error",
      "no-with": "error",
      "camelcase": ["error", { "properties": "always" }],
      "func-names": ["error", "always"],
      "eqeqeq": ["error", "always"],
      "no-null": "error"
    }
  }
  